{
  "name": "my-first-extension",
  "displayName": "my-first-extension",
  "description": "my first VS Code extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "suite-explorer-container",
          "title": "Extension Suite Explorer",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "suite-explorer-container": [
        {
          "id": "suite-commands-view",
          "name": "Suite Actions",
          "icon": "$(tools)"
        },
        {
          "type": "webview",
          "id": "suite-webview-view",
          "name": "Suite Interaction Panel",
          "icon": "$(dashboard)"
        }
      ]
    },
    "commands": [
      {
        "command": "ext.helloWorld",
        "title": "Hello World",
        "category": "Suite"
      },
      {
        "command": "ext.showDate",
        "title": "Display and Insert Current Date",
        "category": "Suite"
      },
      {
        "command": "ext.cleanConsoleLogs",
        "title": "Clean Console Logs",
        "category": "Suite"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}